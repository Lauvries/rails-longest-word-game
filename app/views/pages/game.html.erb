<html>
  <head>
    <link rel="stylesheet" href="stylesheets/game.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>

  <body>
    <div class="container text-center">
      <h1>Letters: </h1>
      <h3><%= @grid %></h3>
      <form action="/score" class= "form">
        <label for="question">Whats your best guess?</label>
        <input type="hidden" name="start_time" value="<%= Time.now.utc.strftime( "%H%M%S%L" ) %>">
        <input type="text" id="question" name="answer">
        <input type="submit" value="Go on!">
        <input type="hidden" name="grid" value="<%= @grid %>">
      </form>
    </div>
  </body>
</html>





